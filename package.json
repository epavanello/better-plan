{
    "name": "better-plan",
    "version": "0.0.14",
    "type": "module",
    "scripts": {
        "dev": "vite dev",
        "build": "vite build && tsc --noEmit",
        "start": "dotenv -e .env -- vite start",
        "lint": "biome check",
        "lint:fix": "biome check --write",
        "check-types": "tsc --noEmit",
        "dev:docker": "docker compose -f docker-compose.dev.yaml up -d",
        "dev:docker:down": "docker compose -f docker-compose.dev.yaml down",
        "db:generate": "drizzle-kit generate --dialect=turso --schema=src/database/schema/index.ts --out=migrations",
        "db:migrate": "drizzle-kit migrate --dialect=turso --schema=src/database/schema/index.ts --out=migrations",
        "db:studio": "drizzle-kit studio",
        "docker:build": "docker compose build",
        "docker:up": "docker compose up -d",
        "docker:down": "docker compose down",
        "release:patch": "npm version patch && git push && git push --tags",
        "release:minor": "npm version minor && git push && git push --tags",
        "release:major": "npm version major && git push && git push --tags",
        "docker:push": "docker buildx build --platform linux/amd64,linux/arm64 -t ghcr.io/$(echo $GITHUB_REPOSITORY | tr '[:upper:]' '[:lower:]'):latest --push ."
    },
    "keywords": [],
    "author": "emadev",
    "license": "MIT",
    "dependencies": {
        "@daveyplate/better-auth-tanstack": "^1.3.6",
        "@daveyplate/better-auth-ui": "^1.7.4",
        "@radix-ui/react-dialog": "^1.1.14",
        "@radix-ui/react-dropdown-menu": "^2.1.11",
        "@radix-ui/react-label": "^2.1.7",
        "@radix-ui/react-popover": "^1.1.14",
        "@radix-ui/react-radio-group": "^1.3.7",
        "@radix-ui/react-select": "^2.2.5",
        "@radix-ui/react-slot": "^1.2.0",
        "@tanstack/react-query": "^5.81.5",
        "@tanstack/react-query-devtools": "^5.81.5",
        "@tanstack/react-router": "^1.122.0",
        "@tanstack/react-start": "^1.122.1",
        "better-auth": "^1.2.12",
        "class-variance-authority": "^0.7.1",
        "clsx": "^2.1.1",
        "date-fns": "^4.1.0",
        "dotenv": "^16.5.0",
        "drizzle-orm": "^0.44.2",
        "drizzle-zod": "^0.8.2",
        "lucide-react": "^0.522.0",
        "next-themes": "1.0.0-beta.0",
        "@libsql/client": "^0.14.0",
        "react": "^19.1.0",
        "react-dom": "^19.1.0",
        "sonner": "^2.0.3",
        "tailwind-merge": "^3.2.0",
        "twitter-api-v2": "^1.23.2",
        "ulid": "^3.0.1",
        "zod": "^3.25.67"
    },
    "devDependencies": {
        "@tailwindcss/vite": "^4.1.4",
        "@types/react": "^19.1.2",
        "@types/react-dom": "^19.1.2",
        "@vitejs/plugin-react": "^4.4.1",
        "dotenv-cli": "^8.0.0",
        "drizzle-kit": "^0.31.0",
        "tailwindcss": "^4.1.4",
        "tailwindcss-safe-area": "^0.6.0",
        "tsx": "^4.19.3",
        "turbo": "^2.5.0",
        "tw-animate-css": "^1.2.8",
        "typescript": "^5.8.3",
        "vite": "^6.3.5",
        "vite-tsconfig-paths": "^5.1.4"
    },
    "packageManager": "pnpm@10.6.4"
}
