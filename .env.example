# =================================================================
# BETTER-PLAN ENVIRONMENT CONFIGURATION
# =================================================================

# App Configuration
APP_URL=http://localhost:3000
NODE_ENV=development
DISABLE_SIGNUP=false

# Authentication
BETTER_AUTH_SECRET=your-secret-key-at-least-32-characters-long

# Database Configuration
DATABASE_URL=file:local.db
# DATABASE_AUTH_TOKEN=
DATABASE_DIALECT=sqlite

# Social Media Integrations
# X_CLIENT_ID=your-twitter-client-id
# X_CLIENT_SECRET=your-twitter-client-secret

# =================================================================
# AI CONFIGURATION
# =================================================================

# OpenAI API Configuration
OPENAI_API_KEY=your-openai-api-key-here

# Deployment Type: "self-hosted" or "saas"
DEPLOYMENT_TYPE=self-hosted

# AI Limits (only used when DEPLOYMENT_TYPE=saas)
AI_MAX_CONTEXT_WINDOW=4000
AI_MAX_GENERATIONS_PER_MONTH=50
AI_MODEL=gpt-4o-mini

